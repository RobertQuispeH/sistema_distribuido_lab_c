	<!ELEMENT libro (portada, cuerpo, contraportada)>
	<!ELEMENT portada (titulo, edicion, autor, editor)>
	<!ELEMENT titulo (#PCDATA)>
	<!ELEMENT edicion (#PCDATA)>
	<!ELEMENT autor (nombre, apellidos, email?)>
